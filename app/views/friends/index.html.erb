
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<table class="table table-striped table-bordered table-hover">
  <thead class="table-dark">
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Comments</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% content_for :title, "Friends" %>

    <% @friends.each do |friend| %>
      <tr>
        <% if current_user.id == friend.user_id %>
        <td><%= friend.name %></td>
        <td><%= friend.email %></td>
        <td><%= friend.phone %></td>
        <td><%= friend.comments %></td>

        <td >
          <%= link_to "Show", friend,class:"btn btn-info" %>
        </td>
        <td>
          <%= link_to "Edit", edit_friend_path(friend),class:"btn btn-warning"  %>
        </td>
        <td>
          <%= button_to "Delete", friend, method: :delete,class:"btn btn-outline-danger"  %>
        </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New friend", new_friend_path, class:"btn btn-secondary" %>
