
<div class="bg-dark text-white p-5 rounded-lg shadow-sm">
 
  <p class = "display-4">
    <%= @friend.name %>
  </p>
   <hr class="my-4">
  <p>
    <%= @friend.comments %>
  </p>
  <p>
    <strong>Phone: </strong><%= @friend.phone %>
  </p>
  <p>
    <strong>Email: </strong><%= @friend.email %>
  </p>

  <div class="mt-4">
    <%= link_to "Edit this friend", edit_friend_path(@friend), class: "btn btn-warning me-2" %>
    <%= link_to "Back to friends", friends_path, class: "btn btn-info me-2" %>
    <br/><br/>
    <%= button_to "Destroy this friend", @friend, method: :delete, class: "btn btn-danger" %>
  </div>
</div>
